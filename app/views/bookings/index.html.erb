<h3> Bookings for <%= @appointment.name %></h3>
<table class="bookings_table">
  <tr>
    <th>Start</th>
    <th>End</th>
  </tr>
  
  <% @bookings.each do |booking| %>
  <tr>
    <td>
      <%= booking.start_time.strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td>
      <%= (booking.calculate_end_time + 60).strftime('%e %b %Y %H:%M%p') %>
    </td>
    <td><%= link_to "Delete", appointment_booking_path(@appointment, booking), :class => 'btn btn-custom', data: { confirm: 'Are you sure?' }, method: :delete %>
    </td>
    <td><%= link_to "Edit", edit_appointment_booking_path(@appointment, booking), :class => 'btn btn-custom' %>
    </td>
  </tr>
  <% end %>
</table>