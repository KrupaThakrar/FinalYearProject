<div class="row">
	
<div class="col-md-4">

<!-- Image Show -->
<%= image_tag @topic.image.url, class: "topic-show" %>

</div>

<div class="col-md-8">
<br>
<br>
<h3><%= @topic.title %></h3>
<p>Average Rating </p> 
<div class="average-review-rating" data-score=<%= @average_review %>></div>
<span>Based on <%= @topic.reviews.count %> reviews </span>
<p><%= @topic.body %></p>
<p><%= @topic.date %></p>
<hr>
</div>

<% if current_user && current_user.admin? %>
<%= link_to "Edit", edit_topic_path(@topic), :class => 'btn btn-custom' %>
<%= link_to "Delete", topic_path(@topic),
					method: :delete,
					data: {confirm: 'Are you sure?'},
					:class => 'btn btn-custom' %>
<% end %>

<br>
<br>

<div>
<%= link_to "Click here to write a review!", new_topic_review_path(@topic), :class => 'btn btn-custom' %>
</div>
<br>
<br>
<!-- Video Show -->
<% if @topic.video.url %>
	<iframe width="800" height="500" src="<%= @topic.video.url %>" ></iframe>
	<br>
	<br> 
<% end %>

<!-- Attachment Show -->
<% if resumes_url %>
<%= link_to 'Download', resumes_url %>
<% end %>

<!--  <iframe width="800" height="500" src="@topic.attachment.url"></iframe>  -->

<br>
<br>
<div class="row">
	<div class="col-md-4">

<div class="row">
	<div class="col-md-4">
	<div class="reviews">
    <h3>Reviews</h3>
    <!-- Where the reviews/ratings will go  -->
    <%= render @topic.reviews %>
</div>


<br>
<%= link_to 'Back', topics_path %>


<script>
	$('.review-rating').raty({
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		},
		path: '/assets/'
	});
</script>

<script>
	$('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>

