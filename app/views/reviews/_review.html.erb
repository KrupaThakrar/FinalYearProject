<div class="review">

<div class="review-rating" data-score="<%= review.rating %>"></div>

<p class="review-comment"><%= review.comment %></p>

<% if user_signed_in? %>

<!-- Show edit and delete option only if review is posted by them -->
<% if review.user_id == current_user.id %>

<%= link_to "Edit", edit_topic_review_path(review.topic, review) %>
<%= link_to "Delete", topic_review_path(review.topic, review), method: :delete, data: { confirm: "Are you sure?"} %>

<% end %>

<% end %>

</div>